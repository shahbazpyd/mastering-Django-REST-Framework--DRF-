FROM node:20-alpine AS builder

WORKDIR /app
COPY package.json .
# âœ… FIXED: npm install generates lockfile automatically
RUN npm install

# Copy source + build
COPY public ./public
COPY src ./src
RUN npm run build

FROM nginx:alpine
COPY --from=builder /app/build /usr/share/nginx/html
COPY nginx/default.conf /etc/nginx/conf.d/default.conf
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
