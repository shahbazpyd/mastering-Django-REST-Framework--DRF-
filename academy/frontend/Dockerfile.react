FROM node:20-alpine AS builder
WORKDIR /app
COPY package*.json ./
RUN npm ci            # Use regular install for build
COPY . .
RUN npm run build || echo "Build failed but continuing"

FROM node:20-alpine
WORKDIR /app
RUN npm install -g serve
COPY --from=builder /app/build ./build
EXPOSE 80
CMD ["serve", "-s", "build", "-l", "80"]